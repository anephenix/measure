{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsc --project tsconfig.json",
    "check-prettier": "prettier src test --check",
    "cover": "NODE_ENV=test npx nyc --reporter=lcov npm t",
    "prettier": "prettier src test --write",
    "size": "size-limit",
    "test": "NODE_ENV=test npx mocha --require ts-node/register --extensions ts,tsx test/* --test",
    "watch": "tsc --project tsconfig.json --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && npm run prettier && npm run size && npm test"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "measure",
  "author": "Paul Jensen",
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/esbuild-why": "^11.1.4",
    "@size-limit/preset-small-lib": "^11.1.4",
    "@types/mocha": "^10.0.7",
    "husky": "^9.1.5",
    "mocha": "^10.7.3",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^17.0.0",
    "prettier": "^3.3.3",
    "size-limit": "^11.1.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "typescript": "^5.5.4"
  }
}
